    <script>
        function redirectToPasswordSafe() {
            let button = document.getElementById("redirect-button");
            let banner = document.querySelector(".banner");
            button.classList.add("fade-out");
            banner.classList.add("fade-out");
            setTimeout(() => {
                window.location.href = "YOUR_PASSWORD_SAFE_LINK_HERE";
            }, 600); // Smooth transition before redirect
        }
    </script>
</head>
<body>

    <div class="banner">
